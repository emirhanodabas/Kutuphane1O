@model KutuphaneYonetimi1OEntites.Model.Yazar
@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="text-align: center; background-color:#1C2E3E;color:white">
    @Model.YazarAdi&nbsp;@Model.YazarSoyadi Güncelleme
</h2>

<div class="form-group" style="margin:15px">
    @using (Html.BeginForm("Guncelle", "Yazar", FormMethod.Post))
    {
        @Html.Label("Id")
        @Html.TextBoxFor(y => y.YazarId, new { @class = "form-control", @readonly = "readonly" })
        <br />
        @Html.Label("Adı")
        @Html.TextBoxFor(y => y.YazarAdi, new { @class = "form-control" })
        <br />
        @Html.Label("Soyadı")
        @Html.TextBoxFor(y => y.YazarSoyadi, new { @class = "form-control" })
        <br />
        @Html.Label("Doğum Tarihi")
        @Html.TextBoxFor(y => y.DogumTarihi, new { @class = "form-control" })
        <br />
        <button class="btn btn-success"> Güncelle </button>
    }
</div>
