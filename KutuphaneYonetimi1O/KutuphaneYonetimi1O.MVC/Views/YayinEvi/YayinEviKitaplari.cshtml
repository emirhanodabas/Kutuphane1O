@using KutuphaneYonetimi1OEntites.Model
@model List<Kitap>
@{
    ViewBag.Title = "YayinEviKitaplari";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="margin: 15px; text-align: center; background-color: #8b7765; color: white ">
    <h2>
        <b> 
            @if (Model.Count > 0) 
            {
                @Model[0].YayinEvi.YayinEviAdi.ToString();
            } &nbsp;'nin Kitaplari
        </b>
    </h2>
</div>

<div class="form-group" style="margin:15px">
    <table class="table table-bordered">
        <thead>
            <tr style="text-align: center; background-color: #8b7765; color: white ">
                <th>Yayın Evi Id</th>
                <th>Kitap Adı</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var ktp in Model)
            {
                <tr style="text-align:center">
                    <td>@ktp.YayinEviId</td>
                    <td>@ktp.KitapAdi</td>
                </tr>
            }
        </tbody>
    </table>

</div>

