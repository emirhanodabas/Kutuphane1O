@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="font-family:'Century Gothic'">

    <div style="text-align: center; background-color: #1C2E3E;color:white;margin:5px">
        <h2><b>Personel Ekle</b></h2>
    </div>
</div>

<div class="tab-pane" id="settings">

    <form class="form-horizontal" method="post">

        <div class="form-group row">
            <div class="col-sm-1">

            </div>
            <label for="inputName" style="text-align:right" class="col-sm-1 col-form-label">Adi</label>
            <div class="col-sm-8">
                <input type="text" name="PersonelAdi" class="form-control" id="inputName" placeholder="Adi">
            </div>
            <div class="col-sm-2">

            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-1">

            </div>
            <label for="inputName" style="text-align:right" class="col-sm-1 col-form-label">Soyadı</label>
            <div class="col-sm-8">
                <input type="text" name="PersonelSoyadi" class="form-control" id="inputName" placeholder="Soyadi">
            </div>
            <div class="col-sm-2">

            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-1">

            </div>
            <label for="inputName" style="text-align:right" class="col-sm-1 col-form-label">Email</label>
            <div class="col-sm-8">
                <input type="text" name="PersonelEmail" class="form-control" id="inputName" placeholder="Email">
            </div>
            <div class="col-sm-2">

            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-1">

            </div>
            <label for="inputName" style="text-align:right" class="col-sm-1 col-form-label">Telefon</label>
            <div class="col-sm-8">
                <input type="text" name="Telefon" class="form-control" id="inputName" placeholder="Telefon Numaranız">
            </div>
            <div class="col-sm-2">

            </div>
        </div>


        <div class="form-group row">
            <div class="col-sm-1">

            </div>
            <label for="inputName" style="text-align:right" class="col-sm-1 col-form-label">Kullanıcı Adı</label>
            <div class="col-sm-8">
                <input type="text" name="PersonelKAdi" class="form-control" id="inputName" placeholder="Kullanıcı Adı">
            </div>
            <div class="col-sm-2">

            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-1">

            </div>
            <label for="inputName" style="text-align:right" class="col-sm-1 col-form-label">Doğum Tarihi</label>
            <div class="col-sm-8">
                <input type="date" name="DogumTarihi" class="form-control" id="inputName" placeholder="Doğum Tarihi">
            </div>
            <div class="col-sm-2">

            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-1">

            </div>
            <label for="inputName" style="text-align:right" class="col-sm-1 col-form-label">Yetkisi</label>
            <div class="col-sm-8">
                <input type="text" name="YetkiId" class="form-control" id="inputName" placeholder="Yetkisi">
            </div>
            <div class="col-sm-2">

            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-1">

            </div>
            <label for="inputName" style="text-align:right" class="col-sm-1 col-form-label">Fotoğraf</label>
            <div class="col-sm-8">
                <input type="text" name="Fotograf" class="form-control" id="inputName" placeholder="Profil Fotograf Linki buraya yazınız">
            </div>
            <div class="col-sm-2">

            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <div class="checkbox">
                    <label>
                        <input type="checkbox"> I agree to the <a href="#">terms and conditions</a>
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-danger">Kaydet</button>
            </div>
        </div>
    </form>


</div>
<!-- /.tab-pane -->
