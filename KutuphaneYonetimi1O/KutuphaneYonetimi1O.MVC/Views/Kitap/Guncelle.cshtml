@model KutuphaneYonetimi1OEntites.Model.Kitap
@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="font-family:'Century Gothic'">

    <div style="text-align: center; background-color: #1C2E3E;color:white;margin:15px">
        <h2><b> Id : @Model.KitapId - Kitap Guncelle</b></h2>
    </div>
</div>

<div style="margin:15px">
    @using (Html.BeginForm("Guncelle", "Kitap", FormMethod.Post))
    {
        @Html.Label("Kitap Id ")
        @Html.TextBoxFor(x => x.KitapId, new { @class = "form-control" })
        <br />
        @Html.Label("Kategorisi")
        @Html.DropDownListFor(x => x.Kategori.KategoriId, (List<SelectListItem>)ViewBag.Kategoriler, new { @class = "form-control" })
        <br />

        @Html.Label("Kitap Adı")
        @Html.TextBoxFor(x => x.KitapAdi, new { @class = "form-control" })
        <br />

        @Html.Label("Kitap Açıklama")
        @Html.TextBoxFor(x => x.KitapAciklama, new { @class = "form-control" })
        <br />
        @Html.Label("Sayfa Sayısı")
        @Html.TextBoxFor(x => x.SayfaSayisi, new { @class = "form-control" })
        <br />
        @Html.Label("Basım Yılı")
        @Html.TextBoxFor(x => x.Basimyili, new { @class = "form-control" })
        <br />
        @Html.Label("Yayın Evi")
        @Html.DropDownListFor(x => x.YayinEvi.YayinEviId, (List<SelectListItem>)ViewBag.YayinEvleri, new { @class = "form-control" })
        <br />
        @Html.Label("Yazarı")
        @Html.DropDownListFor(x => x.Yazar.YazarId, (List<SelectListItem>)ViewBag.Yazarlar, new { @class = "form-control" })
        <br />
        <button style="text-align: center; background-color: #1C2E3E; color: white;height:40px"> <b>Güncelle</b></button>
    }
</div>

